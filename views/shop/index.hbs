<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div id="success" class="alert alert-success" {{#if noMessages}}hidden{{/if}}>
            {{successMsg}}
        </div>
    </div>
</div>

<div class="row">
  <div class="col-sm-3 col-md-2 sidebar">
      <h2 class="bg-grey"
          data-toggle="collapse"
          data-target="#categories-list"
          aria-expanded="true"
          aria-controls="categories-list">
        Categories
      </h2>
      <div class="collapse in" id="categories-list">
        <ul class="nav nav-sidebar">
          {{# each categories }}
          <li><a href="/search?category={{this.name}}">{{this.name}}</a></li>
          {{/each}}
        </ul>
      </div>
  </div>
  <div class="col-sm-9 col-md-10 main">
      {{# each bookChunks }}
        <div class="row">
            {{# this}}
                <div class="col-sm-6 col-md-3">
                    <div class="thumbnail">
                        <img src="{{this.thumbnail}}"
                             alt="book-thumbnail"
                             class="img-responsive">
                        <div class="caption">
                            <h3>{{this.title}}</h3>
                            <p class="author">{{this.author}}</p>
                            <p class="description">{{this.description}}</p>
                            <div class="clearfix">
                                <div class="price pull-left">${{this.sellingPrice}}</div>
                                <a href="/add-to-cart/{{this.ISBN}}" class="btn btn-success pull-right" role="button">Add to Cart</a>
                            </div>
                        </div>
                    </div>
                </div>
            {{/this}}
        </div>
      {{/each}}
  </div>
</div>